<div class="mx-auto md:w-3/4 w-full flex m-auto shadow-lg p-6 bg-red-50">
  <div class="w-full ">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @project %>

    <div class="my-5">
          <%= link_to 'Edit this project', edit_project_path(@project), class: "mt-2 rounded-lg py-3 px-5  bg-blue-100 inline-block font-medium" %>
          <div class="inline-block ml-2">
            <%= button_to 'Destroy this project', project_path(@project), method: :delete, class: "mt-2 rounded-lg py-3 px-5  bg-blue-100 font-medium" %>
          </div>
          <%= link_to 'Back to projects', projects_path, class: "ml-2 rounded-lg py-3 px-5  bg-blue-100 inline-block font-medium" %>

    </div>
    <%= form_for [@project, Comment.new] do |f| %>
      <%= f.text_area :content, placeholder: "Add a Reply" %><br/>
      <%= f.submit "Reply", class: "ml-2 rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium"  %>
    <% end %>

    <div>
      <ul class="d-block">
        <%= render partial: 'comments/comment', collection: @project.comments %>
      </ul> 
    </div>
  </div>


